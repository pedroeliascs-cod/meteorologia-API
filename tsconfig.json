{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "lib": ["ES2022"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@test*": ["./test/*"]
        },
        "rootDirs": [
            "./src",
            "./test"
        ]
    },
    "rootDirs": [
        "./src",
        ".test"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ]
}